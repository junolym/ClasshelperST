{{#if courses}}
<table class="table table-striped">
  <thead>
    <tr>
      <th>课程名称</th>
      <th>上课时间</th>
      <th>学生人数</th>
      <th>签到和测验</th>
    </tr>
  </thead>
  <tbody>
    {{#each courses}}
    <tr>
      <td><a class="btn" href="#coursedetail?cid={{course_id}}">{{course_name}}</td>
      <td><a class="btn" href="#coursedetail?cid={{course_id}}">{{course_time}}</td>
      <td><a class="btn" href="#coursedetail?cid={{course_id}}">{{student_num}}</td>
      <td><a class="btn btn-default" target="_blank" href="/signin/create?cid={{course_id}}">开始签到</a>
      <a class="btn btn-default" href="#createexam?cid={{course_id}}">创建测验</a></td>
    </tr>
    {{/each}}
    <tr>
      <td></td>
      <td><a class="btn addcoursebtn" href="#addcourse">+</a></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>
{{else}}
<div class="jumbotron alert alert-info text-center" role="alert">
    <p>还没有课程哦，点此<a href="#addcourse">创建课程</a>吧</p>
</div>
{{/if}}